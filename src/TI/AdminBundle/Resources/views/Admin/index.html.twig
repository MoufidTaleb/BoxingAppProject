{% extends "TIAdminBundle::layout.html.twig" %}

{% block adminBody %}
    <div class="container">
        <h2>Liste des Utilisateurs</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('ti_admin_editUser', {'id': user.id }) }}">
                            {{ user.username }}
                        </a>
                    </td>
                    <td>{{ user.email }}</td>
                    <td>{% for role in user.roles %}
                            {{ role }},
                        {% endfor %}</td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}