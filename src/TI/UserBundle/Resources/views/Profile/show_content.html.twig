{% trans_default_domain 'FOSUserBundle' %}

<div class="well">
    <p><strong> {{ user.username }}</strong></p>
    <p>Email: {{ user.email }}</p>
    <p>Localisation: {{ user.location }}</p>
    <p>Rôles: {% for role in user.roles %}
            {{ role }},
        {% endfor %}
    </p>
    <p> Dernière connexion: {{ user.lastLogin|date('d/m/Y H:i:s') }}</p>
</div>

<a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary btn-primary"><span
            class="glyphicon glyphicon-cog"></span> Editer mon profil</a>
<hr>
<div>
    <h2>Mes dernières annonces</h2>

    {% for advert in userLastAdverts %}
        <ul>
            <li>
                <a href="{{ path('ti_platform_view', {'id': advert.id}) }} "> {{ advert.title }}</a>
                le {{ advert.date|date('d/m/Y') }}
            </li>
        </ul>
    {% else %}
        Vous n'avez pas d'annonce en cours.
    {% endfor %}

    <ul class="pagination">
        {% for p in range(1, nbPages) %}
            <li{% if p == page %} class="active" {% endif %}>
                <a href="{{ path('fos_user_profile_show', {'page': p}) }}">{{ p }}
                </a>
            </li>
        {% endfor %}
    </ul>

</div>


