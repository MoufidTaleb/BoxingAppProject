{% extends "TIPlatformBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block PlatformBody %}

    {% for message in app.session.flashbag.get('info') %}
        <p> {{ message }}</p>
    {% endfor %}

    <h2>Liste des annonces ({{ nbAdverts }})</h2>
    <ul>
        {% for advert in listAdverts %}
            <li>
                <a href="{{ path('ti_platform_view', {'id': advert.id}) }} "> {{ advert.title }}</a>
                par <i>{{ advert.author }}</i> le {{ advert.date|date('d/m/Y') }}
            </li>

        {% else %}
            Pas encore d'annonces!
        {% endfor %}
    </ul>

    <ul class="pagination">
        {% for p in range(1, nbPages) %}
            <li{% if p == page %} class="active"{% endif %}>
                <a href="{{ path('ti_platform_home', {'page': p}) }}">{{ p }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}